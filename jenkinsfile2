pipeline {
  agent any

  stages {
    stage('Backup') {
      steps {
        sh '''
          docker run --rm -v jenkins_data:/volume -v /root/bkp/:/bkp \
          -v /var/run/docker.sock:/var/run/docker.sock alpine \
          sh -c "cd /volume && tar -czf /root/bkp/backup.tar.gz ."
        '''
      }
    }
  }
}